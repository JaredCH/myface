@model MyFace.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h1>Register</h1>
<form asp-action="Register" method="post">
    <label asp-for="Username"></label>
    <input asp-for="Username" class="input" />
    <span asp-validation-for="Username"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" class="input" />
    <span asp-validation-for="Password"></span>

    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" class="input" />
    <span asp-validation-for="ConfirmPassword"></span>

    <label asp-for="PgpPublicKey">PGP Public Key (optional)</label>
    <textarea asp-for="PgpPublicKey"></textarea>

    <div class="form-actions">
        <button type="submit" class="button">Register</button>
    </div>
</form>
