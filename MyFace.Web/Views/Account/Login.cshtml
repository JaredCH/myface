@model MyFace.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form asp-action="Login" method="post">
    <label asp-for="Username">üîê Login Name (Private)</label>
    <input asp-for="Username" class="input" placeholder="Your private login name" />
    <p class="meta" style="margin-top: 0.25rem; font-size: 0.85rem;">Enter your private login name, not your public username.</p>

    <label asp-for="Password"></label>
    <input asp-for="Password" class="input" />

    <div class="form-captcha">
        @{ var captchaHelpText = "Read the phrase above, then answer the requested word position or simple math. Case insensitive, no punctuation."; }
        <div class="captcha-box">
            <div class="captcha-code">@Html.Raw(ViewBag.CaptchaContext)</div>
            <label class="captcha-question" for="captchaAnswer">@ViewBag.CaptchaQuestion</label>
            <input name="captchaAnswer" id="captchaAnswer" class="input captcha-input" required autocomplete="off" />
            <button type="button"
                    class="captcha-help"
                    title="@captchaHelpText"
                    aria-label="How to complete this captcha">?</button>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="button">Login</button>
    </div>
</form>
