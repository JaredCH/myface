@model MyFace.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form asp-action="Login" method="post">
    <label asp-for="Username">üîê Login Name (Private)</label>
    <input asp-for="Username" class="input" placeholder="Your private login name" />
    <p class="meta" style="margin-top: 0.25rem; font-size: 0.85rem;">Enter your private login name, not your public username.</p>

    <label asp-for="Password"></label>
    <input asp-for="Password" class="input" />

    <div style="background: var(--accent-light); padding: 1rem; border-left: 4px solid var(--accent); margin: 1rem 0; color: var(--fg);">
        <strong>@Html.Raw(ViewBag.CaptchaContext)</strong>
    </div>
    <details style="background: #0f172a08; border: 1px solid #cbd5e1; border-radius: 6px; padding: 0.75rem 1rem; margin: 0.5rem 0 1rem;">
        <summary style="cursor: pointer; font-weight: 600;">How to complete this captcha</summary>
        <ul style="margin: 0.5rem 0 0 1.25rem; padding: 0; list-style: disc;">
            <li>Read the prompt above; it contains the answer.</li>
            <li>For text prompts, enter the phrase shown; for math, enter the result.</li>
            <li>Case is ignored; keep spaces but drop punctuation.</li>
            <li>If the question seems unclear, refresh the page to get a new prompt.</li>
        </ul>
    </details>
    <div class="form-group">
        <label for="captchaAnswer">@ViewBag.CaptchaQuestion</label>
        <input name="captchaAnswer" id="captchaAnswer" class="input" required autocomplete="off" />
    </div>

    <div class="form-actions">
        <button type="submit" class="button">Login</button>
    </div>
</form>
