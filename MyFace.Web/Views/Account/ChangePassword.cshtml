@model MyFace.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h1>Change Password</h1>

@if (TempData["Success"] != null)
{
    <div class="alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert-error">@TempData["Error"]</div>
}

<form asp-action="ChangePassword" method="post" class="form" style="max-width: 480px; display: grid; gap: 0.75rem;">
    @Html.AntiForgeryToken()
    <div>
        <label for="CurrentPassword">Current password</label>
        <input asp-for="CurrentPassword" class="input" autocomplete="current-password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div>
        <label for="NewPassword">New password</label>
        <input asp-for="NewPassword" class="input" autocomplete="new-password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div>
        <label for="ConfirmNewPassword">Confirm new password</label>
        <input asp-for="ConfirmNewPassword" class="input" autocomplete="new-password" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn">Update Password</button>
</form>
