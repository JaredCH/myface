@model MyFace.Web.Models.MailIndexViewModel
<div class="card">
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">To</label>
                <input name="to" class="form-control" value="@Model.Compose.To" placeholder="username or comma separated" />
                <small class="form-text text-muted">Limit: @(Model.IsVerified ? "5 verified" : "1 unverified") recipients.</small>
            </div>
            <div class="mb-3">
                <label class="form-label">Subject</label>
                <input name="subject" class="form-control" value="@Model.Compose.Subject" maxlength="200" />
            </div>
            <div class="mb-3">
                <label class="form-label">Body</label>
                <textarea name="body" class="form-control" rows="6" maxlength="2000">@Model.Compose.Body</textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" formaction="@Url.Action("Send", "Mail")" class="btn btn-primary">Send</button>
                <button type="submit" formaction="@Url.Action("SaveDraft", "Mail")" class="btn btn-secondary">Save Draft</button>
            </div>
        </form>
    </div>
</div>
