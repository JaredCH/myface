@model MyFace.Web.Models.AddMonitorViewModel
@{
    ViewData["Title"] = "Edit Monitor";
    var returnUrl = ViewBag.ReturnUrl as string;
}
<h1>Edit Monitor</h1>
<form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post">
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <label asp-for="Name"></label>
    <input asp-for="Name" class="input" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Description">Category</label>
    <textarea asp-for="Description" class="input" rows="2" placeholder="e.g., Markets & Shops"></textarea>
    <span asp-validation-for="Description"></span>

    <label asp-for="OnionUrl"></label>
    <input asp-for="OnionUrl" class="input" />
    <span asp-validation-for="OnionUrl"></span>

    <div class="form-actions">
        <button type="submit" class="button">Save Changes</button>
        <a href="@(string.IsNullOrWhiteSpace(returnUrl) ? Url.Action("Index") : returnUrl)" class="button">Cancel</a>
    </div>
</form>
