@model List<MyFace.Core.Entities.OnionStatus>
@{
    ViewData["Title"] = "Onion Monitor";
}
<h1>Onion Monitor</h1>
<p>
    <a href="@Url.Action("Add")" class="button">Add Monitor</a> |
    <a href="@Url.Action("Monitor","Rss")">RSS</a> |
    <form asp-action="CheckAll" method="post" style="display:inline">
        <button class="button" type="submit">Check All</button>
    </form>
    
</p>

<table>
    <thead>
        <tr>
            <th>URL</th>
            <th>Status</th>
            <th>Last Checked</th>
            <th>Response Time (ms)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var monitor in Model)
    {
        <tr>
            <td><a href="@monitor.OnionUrl">@monitor.OnionUrl</a></td>
            <td>@monitor.Status</td>
            <td>@monitor.LastChecked?.ToString("u")</td>
            <td>@monitor.ResponseTime?.ToString("F0")</td>
            <td>
                <form asp-action="Check" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@monitor.Id" />
                    <button class="button" type="submit">Check</button>
                </form>
                <form asp-action="Remove" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@monitor.Id" />
                    <button class="button" type="submit">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
