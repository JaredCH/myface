@model MyFace.Core.Entities.Post
@{
    ViewData["Title"] = "Edit Post";
}

<h1>Edit Post</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    
    <div class="form-group">
        <label for="content">Content (BBCode supported)</label>
        <textarea name="content" id="content" rows="10" required>@Model.Content</textarea>
        @await Html.PartialAsync("_BBCodeHelp")
    </div>
    
    <div class="form-actions">
        <button type="submit" class="button">Save Changes</button>
        <a href="@Url.Action("View", "Thread", new { id = Model.ThreadId })" class="button button-secondary">Cancel</a>
    </div>
</form>

<style>
.form-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
}
.button-secondary {
    background: var(--border);
    color: var(--text);
}
.button-secondary:hover {
    background: var(--muted);
}
</style>
