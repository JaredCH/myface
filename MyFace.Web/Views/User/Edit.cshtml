@model MyFace.Web.Models.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
    var fonts = new List<string>
    {
        "Arial, sans-serif", "Helvetica, sans-serif", "Times New Roman, serif", "Courier New, monospace",
        "Verdana, sans-serif", "Georgia, serif", "Palatino, serif", "Garamond, serif",
        "Bookman, serif", "Comic Sans MS, cursive", "Trebuchet MS, sans-serif", "Arial Black, sans-serif",
        "Impact, sans-serif", "Lucida Sans Unicode, sans-serif", "Tahoma, sans-serif", "Geneva, sans-serif",
        "Courier, monospace", "Lucida Console, monospace", "Monaco, monospace", "Brush Script MT, cursive",
        "Lucida Handwriting, cursive", "Copperplate, serif", "Papyrus, fantasy", "Brush Script Std, cursive",
        "Segoe UI, sans-serif", "Roboto, sans-serif", "Open Sans, sans-serif", "Lato, sans-serif",
        "Montserrat, sans-serif", "Oswald, sans-serif", "Raleway, sans-serif", "Merriweather, serif",
        "Noto Sans, sans-serif", "Ubuntu, sans-serif", "Droid Sans, sans-serif", "Cantarell, sans-serif",
        "Fira Sans, sans-serif", "Droid Serif, serif", "Source Sans Pro, sans-serif", "Slabo 27px, serif",
        "PT Sans, sans-serif", "Lora, serif", "Arvo, serif", "Oxygen, sans-serif", "Nunito, sans-serif",
        "Inconsolata, monospace", "Consolas, monospace", "Menlo, monospace", "Dejavu Sans, sans-serif", "Liberation Sans, sans-serif"
    };
}

<h1>Edit Profile</h1>

<form asp-action="Edit" method="post">
    <label asp-for="AboutMe">About Me (BBCode supported)</label>
    <textarea asp-for="AboutMe" class="input" rows="10"></textarea>

    <label asp-for="FontColor">Font Color (Hex or Name)</label>
    <input asp-for="FontColor" class="input" type="color" style="height: 50px" />

    <label asp-for="FontFamily">Font Family</label>
    <select asp-for="FontFamily" class="input">
        @foreach (var font in fonts)
        {
            <option value="@font" style="font-family: @font">@font</option>
        }
    </select>

    <div class="form-actions">
        <button type="submit" class="button">Save Changes</button>
        <a href="/user/@User.Identity.Name" class="button">Cancel</a>
    </div>
</form>
