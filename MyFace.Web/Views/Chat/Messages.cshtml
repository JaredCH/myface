@model MyFace.Web.Models.ChatMessagesViewModel
@{
    Layout = null;
    Response.Headers["X-Frame-Options"] = "DENY"; // already set globally but keep
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content="5" />
    <style>
        body { margin: 0.35rem; background: #0b1224; color: #e5e7eb; font-family: monospace; font-size: 14px; }
        .chat-lines { display: flex; flex-direction: column; gap: 4px; }
        .line { white-space: pre-wrap; }
        .ts { color: #94a3b8; margin-right: 4px; }
        .user { margin-right: 4px; }
        .user.role-admin { color: #ef4444; }
        .user.role-mod { color: #38bdf8; }
        .user.role-verified { color: #22c55e; }
        .user.role-user { color: #e5e7eb; }
        .mention { color: #f59e0b; }
        .msg { color: #e5e7eb; }
        .meta { color: #475569; margin-left: 6px; font-size: 12px; }
        .paused { color: #fef9c3; margin-bottom: 6px; }
    </style>
</head>
<body>
    @if (Model.Paused)
    {
        <div class="paused">Chat is paused. Refreshes continue for visibility.</div>
    }
    @Html.Raw(Model.SnapshotHtml)
</body>
</html>
