@model MyFace.Web.Models.CreateThreadViewModel
@{
    ViewData["Title"] = "Create Thread";
}
<h1>Create Thread</h1>
<form asp-action="Create" method="post">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="input" />
    <span asp-validation-for="Title"></span>

    <label asp-for="Content"></label>
    <textarea asp-for="Content" rows="8"></textarea>
    <span asp-validation-for="Content"></span>

    <label>
        <input type="checkbox" asp-for="PostAsAnonymous" /> Post as Anonymous
    </label>

    <div style="background: #e0f2fe; padding: 1rem; border-left: 4px solid #2563eb; margin: 1rem 0; color: #1e293b;">
        <strong>@Html.Raw(ViewBag.CaptchaContext)</strong>
    </div>
    <div class="form-group">
        <label for="captchaAnswer">@ViewBag.CaptchaQuestion</label>
        <input name="captchaAnswer" id="captchaAnswer" class="input" required autocomplete="off" />
        @if (ViewData.ModelState["Captcha"] != null && ViewData.ModelState["Captcha"].Errors.Count > 0)
        {
            <span style="color: red">@ViewData.ModelState["Captcha"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-actions">
        <button type="submit" class="button">Post Thread</button>
    </div>
</form>
