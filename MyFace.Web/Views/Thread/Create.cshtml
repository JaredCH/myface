@model MyFace.Web.Models.CreateThreadViewModel
@{
    ViewData["Title"] = "Create Thread";
}
<h1>Create Thread</h1>
<form asp-action="Create" method="post">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="input" />
    <span asp-validation-for="Title"></span>

    <label asp-for="Content"></label>
    <textarea asp-for="Content" rows="8"></textarea>
    <span asp-validation-for="Content"></span>

    @await Html.PartialAsync("_BBCodeHelp")

    <label>
        <input type="checkbox" asp-for="PostAsAnonymous" /> Post as Anonymous
    </label>

    <div style="background: var(--accent-light); padding: 1rem; border-left: 4px solid var(--accent); margin: 1rem 0; color: var(--fg);">
        <strong>@Html.Raw(ViewBag.CaptchaContext)</strong>
    </div>
    <details style="background: #0f172a08; border: 1px solid #cbd5e1; border-radius: 6px; padding: 0.75rem 1rem; margin: 0.5rem 0 1rem;">
        <summary style="cursor: pointer; font-weight: 600;">How to complete this captcha</summary>
        <ul style="margin: 0.5rem 0 0 1.25rem; padding: 0; list-style: disc;">
            <li>Read the phrase above.</li>
            <li>The question will ask for the first, second, or third word — type that one word.</li>
            <li>Occasionally you’ll see simple math (1–10); enter the result.</li>
            <li>Case is ignored; no punctuation needed.</li>
        </ul>
    </details>
    <div class="form-group">
        <label for="captchaAnswer">@ViewBag.CaptchaQuestion</label>
        <input name="captchaAnswer" id="captchaAnswer" class="input" required autocomplete="off" />
        @if (ViewData.ModelState["Captcha"] != null && ViewData.ModelState["Captcha"].Errors.Count > 0)
        {
            <span style="color: red">@ViewData.ModelState["Captcha"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div class="form-actions">
        <button type="submit" class="button">Post Thread</button>
    </div>
</form>
