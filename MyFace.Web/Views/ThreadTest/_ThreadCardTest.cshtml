@model MyFace.Core.Entities.Thread
@inject MyFace.Web.Services.BBCodeFormatter Formatter
@using System.Security.Claims
@using MyFace.Core.Entities
@{
    var userRole = User.FindFirstValue(ClaimTypes.Role);
    var isAdminOrMod = userRole == "Admin" || userRole == "Moderator";
    var firstPost = Model.Posts.OrderBy(p => p.CreatedAt).FirstOrDefault();
    var previewImages = firstPost?.Images?.OrderBy(i => i.DisplayOrder).Take(2).ToList() ?? new List<PostImage>();
}
<div class="card thread-card thread-card--test">
    <div class="thread-card-main">
        <h2 class="thread-title"><a href="@Url.Action("ViewTest", "ThreadTest", new { id = Model.Id })">@Model.Title</a></h2>
        <p class="meta">Started @Model.CreatedAt.ToString("u") by 
            @if (Model.IsAnonymous)
            {
                <span>Anonymous</span>
            }
            else
            {
                @await Html.PartialAsync("_UserName", Model.User)
            }
        </p>
        <div class="preview clamp-5">@Formatter.Format(firstPost?.Content ?? "")</div>
        @if (previewImages.Any())
        {
            <div class="thread-card-gallery" aria-label="Thread media preview">
                @foreach (var image in previewImages)
                {
                    <a class="thread-card-thumb" href="@image.OriginalPath" target="_blank" rel="noopener">
                        <img src="@image.ThumbnailPath" alt="Preview image for @Model.Title" loading="lazy" />
                    </a>
                }
            </div>
        }
    </div>
    <div class="card-footer thread-card-footer">
        <a class="button" href="@Url.Action("ViewTest", "ThreadTest", new { id = Model.Id })">View Thread</a>
        <span class="meta">@Model.Posts.Count post(s)</span>
        @if (Model.IsLocked)
        {
            <span class="status-badge" style="margin-left: 0.5rem;">ğŸ”’ Locked</span>
        }
        @if (isAdminOrMod)
        {
            <form method="post" style="display: inline; margin-left: 1rem;">
                @if (Model.IsLocked)
                {
                    <button formaction="@Url.Action("UnlockThread", "Thread", new { id = Model.Id })" type="submit" class="button" style="padding: 0.2rem 0.4rem; font-size: 0.8rem;">ğŸ”“ Unlock</button>
                }
                else
                {
                    <button formaction="@Url.Action("LockThread", "Thread", new { id = Model.Id })" type="submit" class="button" style="padding: 0.2rem 0.4rem; font-size: 0.8rem;">ğŸ”’ Lock</button>
                }
                <button formaction="@Url.Action("DeleteThread", "Thread", new { id = Model.Id })" type="submit" class="button" style="padding: 0.2rem 0.4rem; font-size: 0.8rem; background: #c0392b;">ğŸ—‘ï¸ Delete</button>
            </form>
        }
    </div>
</div>
