@{
    ViewData["Title"] = "Vote Verification";
    Layout = "_Layout";
}

<div class="card" style="max-width: 600px; margin: 2rem auto;">
    <h1>Vote Verification</h1>
    <p>Please complete this check to cast your vote.</p>

    <div style="background: var(--accent-light); padding: 1rem; border-left: 4px solid var(--accent); margin: 1rem 0; color: var(--fg);">
        <strong>@Html.Raw(ViewBag.CaptchaContext)</strong>
    </div>

    <form asp-action="@(ViewBag.IsThreadVote == true ? (ViewBag.IsUpvote ? "ThreadUp" : "ThreadDown") : (ViewBag.IsUpvote ? "Up" : "Down"))" method="post">
        @if (ViewBag.IsThreadVote == true)
        {
            <input type="hidden" name="threadId" value="@ViewBag.ThreadId" />
        }
        else
        {
            <input type="hidden" name="postId" value="@ViewBag.PostId" />
        }
        
        <div class="form-group">
            <label for="captchaAnswer">@ViewBag.CaptchaQuestion</label>
            <input name="captchaAnswer" id="captchaAnswer" class="input" required autocomplete="off" />
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div style="color: red; margin: 1rem 0;">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <button type="submit" class="button">Verify & Vote</button>
    </form>
</div>
