@{
    ViewData["Title"] = "Vote Verification";
    Layout = "_Layout";
}

<div class="card" style="max-width: 600px; margin: 2rem auto;">
    <h1>Vote Verification</h1>
    <p>Please complete this check to cast your vote.</p>

    <form asp-action="@(ViewBag.IsThreadVote == true ? (ViewBag.IsUpvote ? "ThreadUp" : "ThreadDown") : (ViewBag.IsUpvote ? "Up" : "Down"))" method="post">
        @if (ViewBag.IsThreadVote == true)
        {
            <input type="hidden" name="threadId" value="@ViewBag.ThreadId" />
        }
        else
        {
            <input type="hidden" name="postId" value="@ViewBag.PostId" />
        }
        @{ var captchaHelpText = "Read the phrase above, then answer the requested word position or simple math. Case insensitive, no punctuation."; }
        <div class="form-captcha">
            <div class="captcha-box">
                <div class="captcha-code">@Html.Raw(ViewBag.CaptchaContext)</div>
                <label class="captcha-question" for="captchaAnswer">@ViewBag.CaptchaQuestion</label>
                <input name="captchaAnswer" id="captchaAnswer" class="input captcha-input" required autocomplete="off" />
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation" style="margin-top: 0.5rem;">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p style="margin: 0;">@error.ErrorMessage</p>
                        }
                    </div>
                }
                <button type="button"
                        class="captcha-help"
                        title="@captchaHelpText"
                        aria-label="How to complete this captcha">?</button>
            </div>
        </div>

        <button type="submit" class="button">Verify & Vote</button>
    </form>
</div>
