@{
    ViewData["Title"] = "Security Check";
    Layout = "_Layout";
}

<div class="card" style="max-width: 600px; margin: 2rem auto;">
    <h1>Security Check</h1>
    <p>Please complete this check to continue.</p>

    <form asp-action="Verify" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        @{ var captchaHelpText = "Read the phrase above, then answer the requested word position or simple math. Case insensitive, no punctuation."; }
        <div class="form-captcha">
            <div class="captcha-box">
                <div class="captcha-code">@Html.Raw(ViewBag.Context)</div>
                <label class="captcha-question" for="answer">@ViewBag.Question</label>
                <input name="answer" id="answer" class="input captcha-input" required autocomplete="off" />
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation" style="margin-top: 0.5rem;">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p style="margin: 0;">@error.ErrorMessage</p>
                        }
                    </div>
                }
                <button type="button"
                        class="captcha-help"
                        title="@captchaHelpText"
                        aria-label="How to complete this captcha">?</button>
            </div>
        </div>

        <button type="submit" class="button">Verify</button>
    </form>
</div>
